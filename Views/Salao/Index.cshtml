@model IEnumerable<Barbearia.Models.Salao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameSalao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CidadeSalao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RuaSalao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BairroSalao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CepSalao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameSalao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CidadeSalao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RuaSalao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BairroSalao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CepSalao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
