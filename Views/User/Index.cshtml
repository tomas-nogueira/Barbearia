@model IEnumerable<Barbearia.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastrar Usuário</h1>

<p>
    <a asp-action="Create">Cadastrar um novo usuário New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentoUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeUser)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody class="border-dark">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentoUser)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TipoDocumento.TipodeDocumento)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TypeUser.TypeNameUser)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary text-decoration-none btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning text-decoration-none btn-sm">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-decoration-none btn-sm">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
