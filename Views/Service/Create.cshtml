@model Barbearia.Models.Service

@{
    ViewData["Title"] = "Create";
}

<h1>Criar serviços</h1>


<hr />
<div>
    <a asp-action="Index" class="text-black">Voltar</a>
</div>
<div class="Geral">
    <div class="col-md-4 containerForm">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameService" class="control-label"></label>
                <input asp-for="NameService" class="form-control" />
                <span asp-validation-for="NameService" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeService" class="control-label"></label>
                <input asp-for="TimeService" class="form-control" />
                <span asp-validation-for="TimeService" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">Cadastrar</button>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
