@model IEnumerable<Barbearia.Models.Agendamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="text-black-50">Agendar horário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HorarioAgendamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioAgendamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salao.Id)
            </td>
                <td>
                    <div class="btns">
                        <a asp-action="Edit" asp-route-id="@item.AgendamentoId" class="btn btn-primary text-decoration-none btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.AgendamentoId" class="btn btn-warning text-decoration-none btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.AgendamentoId" class="button">
                            <svg viewBox="0 0 448 512" class="svgIcon"><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"></path></svg>
                        </a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
